{
	"name": "template-bun-elysia",
	"version": "1.0.50",
	"type": "module",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "bun run --bun --watch src/index.ts",
		"db:studio": "drizzle-kit studio",
		"drizzle:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"auth:generate": "bun x @better-auth/cli@latest generate --output src/database/schemas/auth.ts -y",
		"db:generate": "bun drizzle:generate && bun auth:generate",
		"db:up": "./postgres.sh",
		"lint": "eslint . --quiet",
		"lint:fix": "eslint . --fix",
		"typecheck": "tsc -b",
		"circular": "dpdm --exit-code circular:1 --no-tree --no-warning --progress false --transform \"./src/index.ts\"",
		"deadcode": "knip --exclude binaries,dependencies,unlisted",
		"check": "run-p typecheck lint circular deadcode build",
		"build": "bun build --compile --outfile=index ./src/index.ts"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.1",
		"@elysiajs/swagger": "^1.3.1",
		"@sinclair/typebox": "0.34.33",
		"better-auth": "^1.4.18",
		"drizzle-orm": "^0.45.1",
		"drizzle-typebox": "^0.3.3",
		"elysia": "^1.4.22",
		"lodash-es": "^4.17.23"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.4.18",
		"@eslint/compat": "^2.0.1",
		"@types/bun": "^1.3.7",
		"@types/lodash-es": "^4.17.12",
		"@types/pg": "^8.16.0",
		"bun-types": "^1.3.8",
		"dotenv": "^17.2.3",
		"dpdm": "^3.14.0",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-neverthrow": "^1.1.4",
		"eslint-plugin-perfectionist": "^5.4.0",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-unicorn": "^62.0.0",
		"jiti": "^2.6.1",
		"knip": "^5.82.1",
		"npm-run-all": "^4.1.5",
		"pg": "^8.17.2",
		"prettier": "^3.8.1",
		"typescript-eslint": "^8.54.0"
	},
	"overrides": {
		"@sinclair/typebox": "0.34.33"
	},
	"module": "src/index.js"
}
